<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_item_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:src="@drawable/ic_launcher_foreground"/>

        <TextView
            android:id="@+id/tv_item_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/iv_item_image"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            tools:text="캐치볼"/>

        <TextView
            android:id="@+id/tv_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_item_brand"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/numberStyle"
            tools:text="395,800원"/>

        <TextView
            android:id="@+id/tv_item_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/tv_item_price"
            app:layout_constraintTop_toBottomOf="@id/tv_item_brand"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:textColor="@color/SaleRate"
            android:textSize="13sp"
            style="@style/numberStyle"
            tools:text="20%"/>

        <TextView
            android:id="@+id/tv_coupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_item_brand"
            app:layout_constraintStart_toEndOf="@id/tv_item_rate"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/coupon_badge_shape"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            tools:text="쿠폰"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>